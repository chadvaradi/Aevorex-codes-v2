{
  "name": "aevorex-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "shared/frontend"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "cd shared/frontend && eslint \"src/**/*.{ts,tsx}\" --report-unused-disable-directives --max-warnings 50",
    "typecheck": "tsc -p shared/frontend/tsconfig.json --noEmit",
    "test": "vitest run --config shared/frontend/vitest.config.ts --exclude 'tests/e2e/**'",
    "preview": "vite preview",
    "dev:all": "bash scripts/dev-all.sh",
    "scan-env": "ts-node scripts/scan-env.ts",
    "build-types": "openapi-typescript http://localhost:8084/api/v1/openapi.json --output shared/frontend/src/types/api.d.ts",
    "ci-check-docs": "bash ./scripts/diff_docs_vs_scan.sh",
    "semgrep:scan": "semgrep --config=r/all . --json -o audits/semgrep_full.json",
    "visual-test": "lost-pixel update",
    "visual-test:ci": "lost-pixel",
    "visual-test:approve": "lost-pixel approve",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "eslintConfig": {
    "cwd": "."
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@swc/plugin-styled-components": "^8.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-storybook": "^9.0.16",
    "globals": "^16.3.0",
    "jsdom": "^24.1.1",
    "lost-pixel": "^3.22.0",
    "openapi-typescript": "^6.7.6",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "react-test-renderer": "^18.3.1",
    "semgrep": "^0.0.1",
    "storybook": "^8.6.14",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^5.4.19",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "use-debounce": "^10.0.5"
  }
}
